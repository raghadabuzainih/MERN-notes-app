{
  "compilerOptions": {
    "rootDir": "./src",  
    "outDir": "./dist", 

    "target": "ES2020", 
    "module": "commonjs",  
    "moduleResolution": "node",
    "types": ["node"],  
    "lib": ["ES2020"],

    "sourceMap": true, 
    "declaration": false,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
